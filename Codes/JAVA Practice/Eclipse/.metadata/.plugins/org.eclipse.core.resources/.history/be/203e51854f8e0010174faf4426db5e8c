import java.util.*;
public class Slot {

	public static void main(String[] args) {
		//Welcome screen
		System.out.print(""" 
				**********************************
				  WELOCME TO JAVA SLOT MACHINE
				  Symbols: 🍒 🍉 🍋 🔔 ⭐
				**********************************
				""");
		// current balance
		int balance;
		balance=100;
		System.out.println("Current Balance: $"+balance);
		//betting amount
		int amt;
		System.out.print("Enter betting amount: ");
		Scanner sc = new Scanner(System.in);
		amt=sc.nextInt();
		sc.close();
		//spin start
		 String[] emojis = {"🍒", "🍉", "🍋", "🔔", "⭐"};
		 Random rand = new Random();
		 int[] values = new int[3];
		 int value;
		 System.out.println("Spinning............");
		 for(int i=0;i<3;i++) {
			 value=rand.nextInt(0,5);
			 values[i]=value;
		 }
		 for (int i : values) {
			System.out.println(i);
		}
		//check symbol matching
		 boolean match =true;
		 for (int i = 0; i < (values.length)-1; i++) {
			if (values[i]!=values[i+1]) {
				match=false;
				break;
			}
		}
		if(match) {
			System.out.println("You Win");
		}
		else {
			System.out.println("you Lose");
		}
			
		//update balance

	}

}
